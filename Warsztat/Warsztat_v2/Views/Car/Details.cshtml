@model Warsztat.BLL.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-white">
            <label asp-for="Id"></label>
        </dt>
        <dd class = "col-sm-10 text-white">
            @Model.Id
        </dd>
        <dt class = "col-sm-2 text-white">
            <label asp-for="CarMark"></label>
        </dt>
        <dd class = "col-sm-10 text-white">
            @Model.CarMark
        </dd>
        <dt class = "col-sm-2 text-white">
            <label asp-for="CarModel"></label>
        </dt>
        <dd class = "col-sm-10 text-white">
            @Model.CarModel
        </dd>
        <dt class = "col-sm-2 text-white">
            <label asp-for="YearProduction"></label>
        </dt>
        <dd class = "col-sm-10 text-white">
            @Model.YearProduction
        </dd>
    </dl>
</div>
<div>
    <a class=" text-white" asp-action="Edit" asp-route-id="@Model.Id"></a> |
    <a class=" text-white" asp-action="Index">Back to List</a>
</div>
