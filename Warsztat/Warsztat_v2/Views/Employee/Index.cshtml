@model IEnumerable<Warsztat_v2.ViewModels.EmployeeDto>

@{
    ViewData["Title"] = "EmployeeDto";
}

<h1>Employees</h1>
<div>
    @await Component.InvokeAsync("EmployeeStatistics")
</div>

<p>
    <a type="button" class="btn btn-outline-warning" asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-hover text-white">
    <thead>
        <tr>
            
            <th>
                <label asp-for="First().Name"></label>
            </th>
            <th>
                <label asp-for="First().Role"></label>
            </th>
            
            <th>
               <label asp-for="First().Age"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @item.Name
            </td>
            <td>
                @item.Role
            </td>
            
            <td>
                @item.Age
            </td>
            <td>
                <a class=" text-white" asp-action = "Edit" asp-route-id = "@item.Id">Edit</a> |
                <a class=" text-white" asp-action = "Details" asp-route-id = "@item.Id">Details</a> |
                <a class=" text-white" asp-action = "Delete" asp-route-id = "@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
