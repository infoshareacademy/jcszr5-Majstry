@model IEnumerable<Warsztat.BLL.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<h1>Employees</h1>
<div>
    @await Component.InvokeAsync("EmployeeStatistics")
</div>

<p>
    <a type="button" class="btn btn-outline-warning" asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-hover text-white">
    <thead>
        <tr>
            
            <th>
                @Html.ActionLink( "First Name", "Index" , new { sortOrder = ViewBag.FirstNameSortParm }, new {@class="text-white" })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSortParm}, new {@class="text-white"} )
            </th>
            
            <th>
                @Html.ActionLink( "Role", "Index", new { sortOrder = ViewBag.RoleSortParm }, new {@class="text-white"})
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            
            <td>
                @item.Role
            </td>
            <td>
                <a class=" text-white" asp-action = "Edit" asp-route-id = "@item.Id">Edit</a> |
                <a class=" text-white" asp-action = "Details" asp-route-id = "@item.Id">Details</a> |
                <a class=" text-white" asp-action = "Delete" asp-route-id = "@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
