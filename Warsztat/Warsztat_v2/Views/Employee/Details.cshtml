@model Warsztat_v2.ViewModels.EmployeeDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    @await Component.InvokeAsync("EmployeeStatistics")
</div>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row  text-white">
        
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Age"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Age
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Salary"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Salary
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Role"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Role
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="FinishedOrder"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.FinishedOrder
        </dd>
    </dl>
</div>
<div>
    <a class=" text-white" asp-action="Edit" asp-route-id="@Model.Id"></a> |
    <a class=" text-white" asp-action="Index">Back to List</a>
</div>
