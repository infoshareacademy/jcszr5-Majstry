@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class = "d-flex text-end">
        <a  class="nav-link px-2 text-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <form  class="nav-link px-2 text-secondary" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
    
    
}
else
{
    <div class = "text-end">
        <a asp-area="Identity" asp-page="/Account/Login"><input type = "button" class = "btn btn-outline-light me-2" value = "Login"></a>
        <a asp-area="Identity" asp-page="/Account/Register"><input type = "button" class = "btn btn-warning" value= "Register"></a>
    </div>
}
