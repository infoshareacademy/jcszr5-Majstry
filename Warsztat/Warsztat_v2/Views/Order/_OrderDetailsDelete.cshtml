        </dd>
        <dt class = "col-sm-2">
          <label asp-for="Client"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Client
        </dd>
        <dt class = "col-sm-2">
         <label asp-for="RegistrationNumber"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.RegistrationNumber
        </dd>
          <dt class = "col-sm-2">
