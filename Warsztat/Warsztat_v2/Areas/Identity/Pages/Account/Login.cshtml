@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div>
    <div class="text-center">
    <form id="account" method="post">
        <div class="mb-3 text-center title">
            <img class="mb-4" src="~/css/imageedit_9_6734632391.png" alt="">
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating text-center">
            <p>Email:</p>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Username" />

            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating  text-center">
            <p> </p>
            <p>Password:</p>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />

            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <p> </p>
        </div>
        <div class="form-group">
            <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label" asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <p>
                        <a id="forgot-password" class = "text-white" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
    </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
